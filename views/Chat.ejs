    <script>
      const messagesEl = document.getElementById('messages');
      const input = document.getElementById('msgInput');
      const recipientEmailField = document.getElementById('recipientEmailField');
      // Fix: Initialize selectedEmail from the hidden field (server-side value) so call works after reload
      let selectedEmail = recipientEmailField ? recipientEmailField.value : '';

      // Get the logged-in user's email from the server-side template
      const myEmail = "<%= (typeof email !== 'undefined') ? email : (locals && locals.email ? locals.email : '') %>";

      function scrollToBottom() {
        if (!messagesEl) return;
        messagesEl.scrollTop = messagesEl.scrollHeight;
      }

      // Auto-highlight the active conversation on load
      if (selectedEmail) {
        const activeConvo = document.querySelector(`.convo[data-email="${selectedEmail}"]`);
        if (activeConvo) {
          activeConvo.style.background = '#eef6ff';
          // Update header if needed (though server likely rendered it)
          const name = activeConvo.querySelector('.title')?.textContent?.trim();
          if (name) {
            document.getElementById('headerTitle').textContent = name;
            const av = document.getElementById('headerAvatar');
            if (av) av.textContent = name[0].toUpperCase();
          }
        }
      }

      // Socket.IO Listener
      socket.on("message", (data) => {
        // If the message is from me, I've already appended it (Optimistic UI)
        if (data.email === myEmail) return;

        const senderEmail = data.email;

        const row = document.createElement('div');
        row.className = 'msg-row incoming'; // It's incoming because it's not me

        const av = document.createElement('div');
        av.className = 'avatar-small';
        av.style.background = 'linear-gradient(135deg,var(--applicant),#22c1c3)';
        av.textContent = (senderEmail && senderEmail[0]) ? senderEmail[0].toUpperCase() : 'U';

        const bubble = document.createElement('div');
        bubble.className = 'bubble incoming';
        bubble.innerHTML = data.message + '<div class="meta"><span class="small">' + new Date().toLocaleTimeString() + '</span></div>';

        row.appendChild(av);
        row.appendChild(bubble);

        if (messagesEl) messagesEl.appendChild(row);
        scrollToBottom();
      });

      async function sendMessage() {
        const text = input.value.trim();
        if (!text) return false;

        const recipientEmail = recipientEmailField.value; // Get from hidden field
        if (!recipientEmail) {
          console.error("No recipient selected");
          return false;
        }

        // Optimistic UI: Append my message immediately
        const row = document.createElement('div');
        row.className = 'msg-row outgoing';
        const bubble = document.createElement('div');
        bubble.className = 'bubble outgoing';
        bubble.setAttribute('role', 'article');
        bubble.innerHTML = text + '<div class="meta"><span class="small">Now</span></div>';
        row.appendChild(bubble);
        if (messagesEl) messagesEl.appendChild(row);
        scrollToBottom();

        // Clear input immediately to prevent double sends, but store text for retry if needed
        input.value = '';

        // Emit to socket for real-time to OTHER user (if they are online)
        socket.emit("user-message", { message: text, email: myEmail });

        try {
          const response = await fetch('/sendMessage', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/x-www-form-urlencoded', // Middleware expects this or json by default bodyParser setup? 
              // app.js has app.use(express.urlencoded()); so x-www-form-urlencoded is safest without changing app.js
            },
            body: new URLSearchParams({
              'recipientEmail': recipientEmail,
              'message': text
            })
          });

          const data = await response.json();
          if (!data.success) {
            console.error("Failed to save message:", data.error);
            alert("Message failed to send to server."); // Simple fallback feedback
          } else {
            console.log("Message saved successfully");
          }
        } catch (err) {
          console.error("Error sending message:", err);
          alert("Network error. Message might not be saved.");
        }

        return false; // Prevent form submission
      }

      function selectConvo(el) {
        if (!el) return;

        document.querySelectorAll('.convo').forEach(c => c.style.background = '');
        el.style.background = '#eef6ff';

        const name = el.querySelector('.title')?.textContent || 'Conversation';
        const sub = el.querySelector('.sub')?.textContent || '';
        selectedEmail = el.getAttribute('data-email') || '';

        const headerTitle = document.getElementById('headerTitle');
        const headerSub = document.getElementById('headerSub');
        if (headerTitle) headerTitle.textContent = name;
        if (headerSub) headerSub.textContent = sub;

        const av = document.getElementById('headerAvatar');
        if (av) av.textContent = name[0]?.toUpperCase() || 'U';

        // submit hidden form to /chat with index so page refreshes and server receives the index
        const idx = el.getAttribute('data-id');
        const convoForm = document.getElementById('convoForm');
        const formIndex = document.getElementById('convoIndex');
        const formEmail = document.getElementById('convoEmail');

        if (convoForm && formIndex && formEmail) {
          formIndex.value = idx;
          formEmail.value = selectedEmail;
          convoForm.submit();
        } else {
          // fallback: redirect with query params
          location.href = `/chat?index=${encodeURIComponent(idx)}&email=${encodeURIComponent(selectedEmail)}`;
        }
      }

      function attachFile() { alert('Attach file dialog (implement as needed)'); }
      function insertEmoji() { input.value += ' ðŸ˜Š'; input.focus(); }

      input.addEventListener('keydown', e => {
        if (e.key === 'Enter' && !e.shiftKey) {
          if (!e.ctrlKey && !e.metaKey) {
            e.preventDefault();
            sendMessage();
          }
        }
      });

      // initial scroll
      scrollToBottom();

      // expose for inline onclicks
      window.selectConvo = selectConvo;
      window.sendMessage = sendMessage;

      // ================= VIDEO CALL LOGIC =================

      let localStream;
      let remoteStream;
      let peer;
      let incomingCallData = null;

      // 1. Register User on Socket Connect
      socket.on("connect", () => {
        console.log("Connected to socket");
        socket.emit("register-user", myEmail);
      });

      let callTimeout;

      // 2. Start Call (Initiator)
      async function startVideoCall() {
        if (!selectedEmail) return alert("Please select a user to chat with first!");

        // Show Modal with Ringing UI
        document.getElementById('video-call-modal').style.display = 'flex';
        document.getElementById('ringing-ui').style.display = 'flex';
        document.getElementById('ringing-name').innerText = selectedEmail;

        document.getElementById('video-grid').style.display = 'none';
        document.getElementById('video-controls').style.display = 'none';
        document.getElementById('call-status').style.display = 'none';

        // Timeout if not answered in 30s
        callTimeout = setTimeout(() => {
          alert("No answer.");
          endCall();
        }, 30000);

        try {
          // Get User Media (Camera/Mic)
          localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
          document.getElementById('local-video').srcObject = localStream;

          // Create Peer for Initiator
          peer = new SimplePeer({ initiator: true, trickle: false, stream: localStream });

          peer.on('signal', (data) => {
            socket.emit("call-user", {
              userToCall: selectedEmail,
              signalData: data,
              from: myEmail
            });
          });

          peer.on('stream', (stream) => {
            document.getElementById('remote-video').srcObject = stream;
            // Switch to Video View
            document.getElementById('ringing-ui').style.display = 'none';
            document.getElementById('video-grid').style.display = 'flex';
            document.getElementById('video-controls').style.display = 'flex';
          });

          peer.on('error', err => console.error("Peer Error:", err));

          // Handle Call Accepted
          socket.on("call-accepted", (signal) => {
            clearTimeout(callTimeout);
            peer.signal(signal);
            // Switch to Video View immediately on accept signal (waiting for stream)
            document.getElementById('ringing-ui').style.display = 'none';
            document.getElementById('video-grid').style.display = 'flex';
            document.getElementById('video-controls').style.display = 'flex';
          });

          socket.on("call-rejected", () => {
            alert("Call rejected.");
            endCall();
          });

        } catch (err) {
          console.error("Error accessing media:", err);
          alert("Could not access camera/microphone");
          endCall();
        }
      }

      // 3. Receive Call (Listener)
      socket.on("call-user", (data) => {
        // data: { signal: offer, from: email }
        incomingCallData = data;
        document.getElementById('caller-id').innerText = data.from;
        document.getElementById('incoming-call-alert').style.display = 'block';
      });

      // 4. Accept Call
      async function acceptCall() {
        document.getElementById('incoming-call-alert').style.display = 'none';
        document.getElementById('video-call-modal').style.display = 'flex';

        // Show Video Grid immediately for receiver
        document.getElementById('ringing-ui').style.display = 'none';
        document.getElementById('video-grid').style.display = 'flex';
        document.getElementById('video-controls').style.display = 'flex';

        try {
          localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
          document.getElementById('local-video').srcObject = localStream;

          peer = new SimplePeer({ initiator: false, trickle: false, stream: localStream });

          peer.on('signal', (data) => {
            socket.emit("answer-call", { signal: data, to: incomingCallData.from });
          });

          peer.on('stream', (stream) => {
            document.getElementById('remote-video').srcObject = stream;
          });

          peer.signal(incomingCallData.signal);

        } catch (err) {
          console.error(err);
          endCall();
        }
      }

      function rejectCall() {
        document.getElementById('incoming-call-alert').style.display = 'none';
        if (incomingCallData) {
          socket.emit("reject-call", { to: incomingCallData.from });
        }
      }

      function endCall() {
        if (callTimeout) clearTimeout(callTimeout);
        if (peer) peer.destroy();
        if (localStream) localStream.getTracks().forEach(track => track.stop());
        document.getElementById('video-call-modal').style.display = 'none';
        // Clean up event listeners to avoid duplicates if re-added? (SimplePeer destroys itself usually)
      }
    </script>



