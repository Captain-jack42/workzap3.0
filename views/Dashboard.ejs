<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-briefcase"></i>
                <h2>WorkForce</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="active"><i class="fas fa-home"></i> Dashboard</a>
                <a href="#"><i class="fas fa-users"></i> Employees</a>
                <a href="#"><i class="fas fa-chart-line"></i> Analytics</a>
                <a href="#"><i class="fas fa-cog"></i> Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="dashboard-header">
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search employees...">
                </div>
                <div class="header-actions">
                    <button class="notification-btn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <div class="user-profile">
                        <img src="https://via.placeholder.com/40" alt="Admin Profile">
                        <span>Admin User</span>
                    </div>
                </div>
            </header>

            <!-- Dashboard Overview -->
            <section class="dashboard-overview">
                <div class="stats-card">
                    <i class="fas fa-user-tie"></i>
                    <div class="stats-info">
                        <h3>Total Employees</h3>
                        <p class="stats-number"><</p>
                    </div>
                </div>
                <div class="stats-card">
                    <i class="fas fa-briefcase"></i>
                    <div class="stats-info">
                        <h3>Active Projects</h3>
                        <p class="stats-number">12</p>
                    </div>
                </div>
                <div class="stats-card">
                    <i class="fas fa-clock"></i>
                    <div class="stats-info">
                        <h3>Hours Worked</h3>
                        <p class="stats-number">2,450</p>
                    </div>
                </div>
                <div class="stats-card">
                    <i class="fas fa-star"></i>
                    <div class="stats-info">
                        <h3>Performance</h3>
                        <p class="stats-number">92%</p>
                    </div>
                </div>
            </section>

            <!-- Employee List -->
            <section class="employee-list">
                <div class="section-header">
                    <h2>Hired Employees</h2>
                    <div class="filter-options">
                        <select>
                            <option value="">All Departments</option>
                            <option value="tech">Technology</option>
                            <option value="hr">HR</option>
                            <option value="sales">Sales</option>
                        </select>
                        <button class="filter-btn">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                    </div>
                </div>

                <div class="employee-grid">
                    <!-- <% matchedAccounts.forEach(employee => { %> -->
                        <div class="employee-card">
                            <div class="employee-header">
                                <img src="https://via.placeholder.com/60" alt="Employee Photo">
                                <div class="employee-status active"></div>
                            </div>
                            <div class="employee-info">
                                <h3>
                                    <%= employee.sfullName %></h3>
                                <p class="designation"><%= employee.profession %></p>
                                <div class="employee-details">
                                    <p><i class="fas fa-id-badge"></i> ID: <%= employee.id %></p>
                                    <p><i class="fas fa-briefcase"></i> Experience: <%= employee.experience %> years</p>
                                    <p><i class="fas fa-tools"></i> Skills: <%= employee.skills %></p>
                                </div>
                                <div class="employee-actions">
                                    <button class="action-btn view-btn">
                                        <i class="fas fa-eye"></i> View Profile
                                    </button>
                                    <button class="action-btn message-btn">
                                        <i class="fas fa-envelope"></i> Message
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </section>

            <!-- Recent Activity -->
            <section class="recent-activity">
                <h2>Recent Activity</h2>
                <div class="activity-timeline">
                    <div class="activity-item">
                        <div class="activity-icon"><i class="fas fa-user-plus"></i></div>
                        <div class="activity-details">
                            <p>New employee John Doe joined the team</p>
                            <span class="activity-time">2 hours ago</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon"><i class="fas fa-project-diagram"></i></div>
                        <div class="activity-details">
                            <p>Project "Website Redesign" assigned to team</p>
                            <span class="activity-time">5 hours ago</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon"><i class="fas fa-tasks"></i></div>
                        <div class="activity-details">
                            <p>Performance review completed for Q2</p>
                            <span class="activity-time">1 day ago</span>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>
</html>