<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>
    <link rel="stylesheet" href="/joblisting.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
 <div class="page-container">
    <%- include('partials/header') %>
    <div class="container">
             
        <header class="header">
            <h1>Available Job Positions</h1>
            <p>Find your dream job today</p>
        </header>
        <% PostedJob.forEach(Job => {  %>

        

        <div class="jobs-grid">
            <!-- Example job card (You'll generate these dynamically from your backend) -->
            <div class="job-card">
                <div class="company-logo">
                    <i class="fas fa-building"></i>
                </div>
                <div class="job-content">
                    <h2 class="job-title"><%= Job.JobTitle %></h2>
                    <h3 class="company-name"><%= Job.Company %>></h3>
                    <div class="job-details">
                        <span><i class="fas fa-map-marker-alt"></i> <%= Job.Location %></span>
                        <span><i class="fas fa-clock"></i> <%= Job.JobType %></span>
                        <span><i class="fas fa-dollar-sign"></i> <%= Job.SalaryRange %></span>
                    </div>
                    <p class="job-description">
                        <<%= Job.JobDescription %>
                    </p>
                    <div class="job-tags">
                        <span>React</span>
                        <span>TypeScript</span>
                        <span>CSS3</span>
                    </div>

                    <div class="job-Deadline">
                        <span>DeadLine: <%= Job.DeadLine  %> </span>
                    </div>
                    
                    <div class="job-actions">
                        <% if (!isLoggedIn) { %>
                            <a href="/login" style="text-decoration: none; color: white;"><button class="apply-btn" >Login</button></a>
                        <button class="save-btn"><i class="far fa-bookmark"></i></button>
                
            <% } else { %>
                <form action="/apply" method="POST" style="display: inline;">
                    <input type="hidden" name="jobId" value="<%= Job._id %>">
                    <button type="submit"  class="apply-btn">Apply Now</button>
                </form>
                <form action="/save" method="POST" style="display: inline;">
                    <input type="hidden" name="jobId" value="<%= Job._id %>">
                    <button type="submit" class="save-btn"><i class="far fa-bookmark"></i></button>
                </form>
                
            <% } %>
                        
                    </div>
                </div>
            </div>

            <!-- Add more job cards as needed -->
        </div>
    <% })  %>
    </div>
</div>

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #a0a2a3 0%, #97c8f0 100%);
        }

        .container {
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 3rem;
            color: #2c3e50;
        }

        .job-card {
            background: linear-gradient(to bottom, #ffffff, #ebf3f5);
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.248);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }
    </style>
</body>
</html>