<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports & Analytics</title>
    <link rel="stylesheet" href="/report.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Chart.js for data visualization -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="reports-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-chart-line"></i>
                <h2>Analytics</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                <a href="/payroll"><i class="fas fa-money-check-alt"></i> Payroll</a>
                <a href="#" class="active"><i class="fas fa-chart-bar"></i> Reports</a>
                <a href="#"><i class="fas fa-cog"></i> Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="reports-header">
                <h1><i class="fas fa-chart-line"></i> Reports & Analytics</h1>
                <div class="header-actions">
                    <button class="export-btn">
                        <i class="fas fa-download"></i> Export Reports
                    </button>
                </div>
            </header>

            <!-- Reports Overview -->
            <section class="reports-overview">
                <div class="overview-card">
                    <i class="fas fa-user-plus"></i>
                    <div class="overview-info">
                        <h3>New Hires</h3>
                        <p class="overview-number">12</p>
                        <span class="trend positive">+20%</span>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-users"></i>
                    <div class="overview-info">
                        <h3>Total Workforce</h3>
                        <p class="overview-number">156</p>
                        <span class="trend positive">+5%</span>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-chart-pie"></i>
                    <div class="overview-info">
                        <h3>Retention Rate</h3>
                        <p class="overview-number">95%</p>
                        <span class="trend positive">+2%</span>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-money-bill-trend-up"></i>
                    <div class="overview-info">
                        <h3>Avg. Salary</h3>
                        <p class="overview-number">â‚¹ 85,000</p>
                        <span class="trend positive">+8%</span>
                    </div>
                </div>
            </section>




            <!-- Department Analytics -->
            <section class="department-analytics">
                <div class="section-header">
                    <h2>Department Distribution</h2>
                    <select class="time-filter">
                        <option value="monthly">Monthly</option>
                        <option value="quarterly">Quarterly</option>
                        <option value="yearly">Yearly</option>
                    </select>
                </div>
                <div class="department-stats">
                    <div class="department-card">
                        <div class="department-info">
                            <h3>Technology</h3>
                            <p>45 Employees</p>
                        </div>
                        <div class="progress-bar">
                            <div class="progress" style="width: 35%"></div>
                        </div>
                        <p class="percentage">35%</p>
                    </div>
                    <div class="department-card">
                        <div class="department-info">
                            <h3>Design</h3>
                            <p>25 Employees</p>
                        </div>
                        <div class="progress-bar">
                            <div class="progress" style="width: 20%"></div>
                        </div>
                        <p class="percentage">20%</p>
                    </div>
                    <div class="department-card">
                        <div class="department-info">
                            <h3>Product</h3>
                            <p>30 Employees</p>
                        </div>
                        <div class="progress-bar">
                            <div class="progress" style="width: 25%"></div>
                        </div>
                        <p class="percentage">25%</p>
                    </div>
                    <div class="department-card">
                        <div class="department-info">
                            <h3>Operations</h3>
                            <p>20 Employees</p>
                        </div>
                        <div class="progress-bar">
                            <div class="progress" style="width: 20%"></div>
                        </div>
                        <p class="percentage">20%</p>
                    </div>
                </div>
            </section>

            <!-- Performance Metrics -->
            <section class="performance-metrics">
                <h2>Employee Performance</h2>
                <div class="metrics-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Projects</th>
                                <th>Tasks</th>
                                <th>Performance</th>
                                <th>Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Priya Sharma</span>
                                    </div>
                                </td>
                                <td>Technology</td>
                                <td>5</td>
                                <td>45/50</td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-level high" style="width: 95%">95%</div>
                                    </div>
                                </td>
                                <td>98%</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Rahul Verma</span>
                                    </div>
                                </td>
                                <td>Design</td>
                                <td>4</td>
                                <td>38/40</td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-level medium" style="width: 88%">88%</div>
                                    </div>
                                </td>
                                <td>95%</td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Ananya Patel</span>
                                    </div>
                                </td>
                                <td>Product</td>
                                <td>6</td>
                                <td>55/60</td>
                                <td>
                                    <div class="performance-bar">
                                        <div class="performance-level high" style="width: 92%">92%</div>
                                    </div>
                                </td>
                                <td>97%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Recent Reports -->
            <section class="recent-reports">
                <h2>Generated Reports</h2>
                <div class="reports-grid">
                    <div class="report-card">
                        <div class="report-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="report-info">
                            <h3>Monthly Performance Report</h3>
                            <p>March 2024</p>
                            <div class="report-actions">
                                <button class="download-btn">
                                    <i class="fas fa-download"></i> Download
                                </button>
                                <button class="view-btn">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="report-card">
                        <div class="report-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="report-info">
                            <h3>Quarterly Department Analysis</h3>
                            <p>Q1 2024</p>
                            <div class="report-actions">
                                <button class="download-btn">
                                    <i class="fas fa-download"></i> Download
                                </button>
                                <button class="view-btn">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        // Sample chart initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Workforce Distribution Chart
            const workforceCtx = document.getElementById('workforceChart').getContext('2d');
            new Chart(workforceCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Technology', 'HR', 'Sales', 'Operations'],
                    datasets: [{
                        data: [45, 15, 25, 15],
                        backgroundColor: ['#4299e1', '#48bb78', '#ecc94b', '#ed64a6']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Salary Trends Chart
            const salaryCtx = document.getElementById('salaryChart').getContext('2d');
            new Chart(salaryCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Average Salary',
                        data: [50000, 52000, 51000, 54000, 53000, 55000],
                        borderColor: '#4299e1',
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });
    </script>
</body>
</html>
