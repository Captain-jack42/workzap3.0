<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payroll Management</title>
    <link rel="stylesheet" href="/payroll.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="payroll-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-money-bill-wave"></i>
                <h2>Payroll System</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                <a href="#" class="active"><i class="fas fa-money-check-alt"></i> Payroll</a>
                <a href="/report"><i class="fas fa-chart-bar"></i> Reports</a>
                <a href="setting"><i class="fas fa-cog"></i> Settings</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="payroll-header">
                <h1><i class="fas fa-money-check-alt"></i> Payroll Management</h1>
                <div class="header-actions">
                    <button class="add-payment-btn">
                        <i class="fas fa-plus"></i> New Payment
                    </button>
                </div>
            </header>

            <!-- Payroll Overview -->
            <section class="payroll-overview">
                <div class="overview-card">
                    <i class="fas fa-users"></i>
                    <div class="overview-info">
                        <h3>Total Employees</h3>
                        <p class="overview-number">156</p>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-money-bill-wave"></i>
                    <div class="overview-info">
                        <h3>Monthly Payroll</h3>
                        <p class="overview-number">₹ 8,50,000</p>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-clock"></i>
                    <div class="overview-info">
                        <h3>Next Payday</h3>
                        <p class="overview-number">5 Days</p>
                    </div>
                </div>
                <div class="overview-card">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <div class="overview-info">
                        <h3>Pending Approvals</h3>
                        <p class="overview-number">3</p>
                    </div>
                </div>
            </section>

            <!-- Salary Processing Section -->
            <section class="salary-processing">
                <div class="section-header">
                    <h2>Salary Processing</h2>
                    <div class="processing-actions">
                        <select class="month-select">
                            <option value="">Select Month</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                        </select>
                        <button class="process-btn">
                            <i class="fas fa-play"></i> Process Payroll
                        </button>
                    </div>
                </div>

                <div class="salary-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Basic Salary</th>
                                <th>Allowances</th>
                                <th>Deductions</th>
                                <th>Net Salary</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#EMP001</td>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Priya Sharma</span>
                                    </div>
                                </td>
                                <td>Software Engineer</td>
                                <td>₹ 85,000</td>
                                <td>₹ 15,000</td>
                                <td>₹ 8,000</td>
                                <td>₹ 92,000</td>
                                <td><span class="status-badge pending">Pending</span></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn view-btn" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn approve-btn" title="Approve">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>#EMP002</td>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Rahul Verma</span>
                                    </div>
                                </td>
                                <td>UI/UX Designer</td>
                                <td>₹ 75,000</td>
                                <td>₹ 12,000</td>
                                <td>₹ 7,000</td>
                                <td>₹ 80,000</td>
                                <td><span class="status-badge completed">Approved</span></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn view-btn" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn approve-btn" title="Approve">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>#EMP003</td>
                                <td>
                                    <div class="employee-info">
                                        <img src="https://via.placeholder.com/40" alt="Employee">
                                        <span>Ananya Patel</span>
                                    </div>
                                </td>
                                <td>Product Manager</td>
                                <td>₹ 120,000</td>
                                <td>₹ 25,000</td>
                                <td>₹ 12,000</td>
                                <td>₹ 133,000</td>
                                <td><span class="status-badge pending">Pending</span></td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn view-btn" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="action-btn edit-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn approve-btn" title="Approve">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Payment History -->
            <section class="payment-history">
                <h2>Recent Payments</h2>
                <div class="history-cards">
                    <div class="history-card">
                        <div class="history-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="history-details">
                            <h3>March 2024 Payroll</h3>
                            <p>Processed on March 28, 2024</p>
                            <p class="amount">Total: ₹ 8,50,000</p>
                            <span class="status-badge completed">Completed</span>
                        </div>
                    </div>
                    <div class="history-card">
                        <div class="history-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="history-details">
                            <h3>February 2024 Payroll</h3>
                            <p>Processed on February 28, 2024</p>
                            <p class="amount">Total: ₹ 8,25,000</p>
                            <span class="status-badge completed">Completed</span>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>
</html>